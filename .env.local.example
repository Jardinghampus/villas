# ===========================================
# DubaiVille Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ===========================================
# NOTION CONFIGURATION (Required)
# ===========================================
# Get your Notion API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Notion Database IDs (Get from database URL: notion.so/{workspace}/{database_id}?v=...)
NOTION_DATABASE_CUSTOMERS=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_PROPERTIES=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_MATCHES=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_AGENTS=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_ANALYTICS=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# App name displayed in UI
NEXT_PUBLIC_APP_NAME=DubaiVille

# ===========================================
# OPTIONAL: AUTHENTICATION (NextAuth.js)
# ===========================================
# Generate with: openssl rand -base64 32
# NEXTAUTH_SECRET=your-secret-here
# NEXTAUTH_URL=http://localhost:3000

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# ===========================================
# OPTIONAL: ANALYTICS & MONITORING
# ===========================================
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# SENTRY_DSN=

# ===========================================
# OPTIONAL: EXTERNAL SERVICES
# ===========================================
# Stripe (for future payment integration)
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# WhatsApp Business API (for notifications)
# WHATSAPP_ACCESS_TOKEN=
# WHATSAPP_PHONE_NUMBER_ID=

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to 'true' to enable debug logging
# DEBUG_MODE=false
